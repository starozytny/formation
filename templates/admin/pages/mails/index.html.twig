{% extends 'admin/pages/mails/template.html.twig' %}

{% set page_title %}Boite mail{% endset %}
{% set page_subtitle %}Boite mail configur√© en IMAP.{% endset %}

{% block main_content %}
    <div class="main-content" style="filter: invert(100%)">
        <div class="count">
            {{ pagination.getTotalItemCount }}
        </div>
        <div>
            {# table body #}
            {% for item in pagination %}
                <div>{{ item.body | raw }}</div>
                <br>
                <hr>
                <br>
            {% endfor %}
        </div>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    <div id="mails">
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}
